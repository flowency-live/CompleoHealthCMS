{
    "kind": "collectionType",
    "collectionName": "policy_documents",
    "info": {
        "singularName": "policy-document",
        "pluralName": "policy-documents",
        "displayName": "Policy Document",
        "description": "Policy documents and governance statements"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text",
            "required": true
        },
        "lastUpdated": {
            "type": "date",
            "required": true
        },
        "document": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": ["files"]
        },
        "size": {
            "type": "string"
        },
        "order": {
            "type": "integer",
            "default": 0
        }
    }
}
