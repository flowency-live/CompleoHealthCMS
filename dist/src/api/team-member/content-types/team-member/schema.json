{
    "kind": "collectionType",
    "collectionName": "team_members",
    "info": {
        "singularName": "team-member",
        "pluralName": "team-members",
        "displayName": "Team Members",
        "description": "Team member profiles"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "id_slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "name": {
            "type": "string",
            "required": true
        },
        "role": {
            "type": "string",
            "required": true
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["images"]
        },
        "bio": {
            "type": "richtext",
            "required": false
        },
        "linkedin": {
            "type": "string",
            "required": false
        },
        "display_order": {
            "type": "integer",
            "required": false,
            "default": 0
        }
    }
}
