{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Collection of services offered by Compleo Health"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "elements.feature-item",
      "required": true,
      "min": 1,
      "max": 4
    },
    "imageUrl": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "imageAlt": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "detailContent": {
      "type": "component",
      "repeatable": false,
      "component": "sections.service-detail"
    }
  }
}
